<div class="card card-position">
<article class="card-body">
	<h4 class="card-title text-center mb-4 mt-1">Sign in</h4>
	<hr>

  		<% if user.errors.any? %>
  		  <div id="">
  		        <p><%= user.errors.to_a.last %></p>
  		  </div>
  		<% end %>
		  
	<%= form_with(model: user) do |form| %>
		<div class="form-group">
		<div class="input-group">
			<div class="input-group-prepend">
			    <span class="input-group-text"> <i class="fa fa-user"></i> </span>
			 </div>
    		<%= form.text_field :email, class:"form-control", placeholder: "Email", type:"email" %>
		</div>
		</div> 
		<div class="form-group">
		<div class="input-group" style="margin-top: 1em">
			<div class="input-group-prepend">
			    <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
			 </div>
   				 <%= form.password_field  :password, placeholder: "Contraseña",  class:"form-control" %>
		</div> 

		<div class="input-group" style="margin-top: 1em">
			<div class="input-group-prepend">
			    <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
			 </div>
			<%= form.password_field :password_confirmation, placeholder: "Repetir contraseña", class:"form-control" %>
		</div> 
		</div>
		<div class="form-group button-create ">
		<%= form.submit class:"btn btn-primary btn-block", placeholder:"Registrarse"%>
		</div> 
	<% end %>

</article>
</div> <!-- card.// -->