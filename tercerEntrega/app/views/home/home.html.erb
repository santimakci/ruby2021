   <!-- Header-->
<% if !logged_in? %>
  <header class="bg-gradient text-white">
    <div class="container px-4 text-center" style="margin-top: -3em;">
      <h1 class="fw-bolder">Bienvenido a Polycon! </h1>
      <p class="lead">Por favor inicie sesión o registrese para poder utiliziar nuestros servicios</p>
      <%= link_to 'Iniciar sesión', new_session_path, class:"btn btn-lg btn-light" %>
      <%= link_to 'Registrarse', new_user_path, class:"btn btn-lg btn-light" %>
    </div>
  </header>
  <!-- Contact section-->
  <section id="contact">
    <div class="container px-4" >
      <div class="row gx-4 justify-content-center">
        <div class="col-lg-8">
          <h2>Polycon</h2>
          <p class="lead">Polycon es un sistema de gestión de turnos realizado para la materia Taller de tecnologías y producción de software opción Ruby</p>
        </div>
      </div>
    </div>
  </section>
<% else %>
  <%= render 'logged_home', professionals: @professionals %>
<% end %>
